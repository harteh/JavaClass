
public class TestBreakContinue {

	public static void main(String[] args) {
		System.out.println("****** 구구단 짝수단만 출력******");
		/*
		 * 2*1=2
		 * 2*2=4
		 * 2*3=6
		 * 2*4=8
		 * ...
		 */
		for (int i = 2; i < 9; i++) {	//2단부터 9단까지
			for (int j = 1; j < 9; j++) {
				if (i%2==0) {
					System.out.printf("%d*%d=%d ", i,j,i*j);
				}
				break;
				
			}
			
		}
		
		

	}

}
