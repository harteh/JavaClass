import java.util.Scanner;
/**
 * do {
 * 		작업문 
 * } while(조건식);
 * 
 * - 무조건 최소 한번은 실행됨
 *
 */
public class TestDoWhile {

	public static void main(String[] args) {

		System.out.println("****** do~while ******");
		int i=0;	//초기식
		
		do {
			System.out.print(i+" ");
			i++;	//증감식
		} while (i<10);	//조건식
		

		System.out.println();
		System.out.println("****** 1-20까지 합 do~while ******");
		
		i=1;
		int sum=0;
		do {
			System.out.print(i +" ");
			sum += i;
			i++;
		} while (i<=20);
		System.out.println(sum);

	}

}
